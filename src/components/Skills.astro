---
import Angular from "../icons/Angular.astro";
import Javascript from "../icons/Javascript.astro";
import MySQL from "../icons/MySQL.astro";
import ReactJS from "../icons/ReactJS.astro";
import Typescript from "../icons/Typescript.astro";
import HTML from "../icons/HTML.astro";
import CSS3 from "../icons/CSS3.astro";
import Git from "../icons/Git.astro";
import Tailwind from "../icons/Tailwind.astro";
import MongoDB from "../icons/MongoDB.astro";
import NodeJS from "../icons/NodeJS.astro";
import Express from "../icons/Express.astro";

const skills = [
  { skill: ReactJS, className: "size-8 md:size-12" },
  { skill: Angular, className: "size-8 md:size-12" },
  { skill: MySQL, className: "size-8 md:size-12" },
  { skill: Javascript, className: "size-8 md:size-12" },
  { skill: Typescript, className: "size-8 md:size-12" },
  { skill: HTML, className: "size-8 md:size-12" },
  { skill: CSS3, className: "size-10 md:size-16" },
  { skill: Git, className: "size-8 md:size-12" },
  { skill: Tailwind, className: "size-8 md:size-12" },
  { skill: MongoDB, className: "size-8 md:size-12" },
  { skill: NodeJS, className: "size-8 md:size-12" },
  { skill: Express, className: "size-8 md:size-12" },
];
---

<div class="w-3/4 flex flex-wrap gap-10 items-center justify-center m-auto">
  {
    skills.map(({ skill: Icon, className }) => (
      <div>
        <Icon class={className} />
      </div>
    ))
  }
</div>

